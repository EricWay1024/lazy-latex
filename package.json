{
  "name": "lazy-latex",
  "displayName": "lazy-latex",
  "description": "write latex lazily using llm",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.106.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./extension.js",
  "activationEvents": [
    "onLanguage:latex",
    "onCommand:lazy-latex.mathToLatex"
  ],
  "contributes": {
    "commands": [
      {
        "command": "lazy-latex.mathToLatex",
        "title": "Lazy LaTeX: Convert selection to math"
      }
    ],
    "keybindings": [
      {
        "command": "lazy-latex.mathToLatex",
        "key": "ctrl+alt+m",
        "when": "editorTextFocus"
      }
    ],
    "configuration": {
      "title": "Lazy LaTeX",
      "properties": {
        "lazy-latex.llm.endpoint": {
          "type": "string",
          "default": "https://api.openai.com/v1/chat/completions",
          "description": "HTTP endpoint for an OpenAI-compatible chat completion API."
        },
        "lazy-latex.llm.apiKey": {
          "type": "string",
          "default": "",
          "description": "API key for your LLM provider.",
          "secret": true
        },
        "lazy-latex.llm.model": {
          "type": "string",
          "default": "gpt-4o-mini",
          "description": "Model name to use for LaTeX generation."
        }
      }
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.106.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "eslint": "^9.32.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
